<%= form_with(model: memo, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :content, "本文" %>
    <%= f.text_area :content, class: "form-control", rows: 5 %>
  </div>

  <%= f.submit "保存", class: "btn btn-success" %>
<% end %>
